<%- include('header') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Admin Form Layout</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Forms</li>
          <li class="breadcrumb-item active">Layouts</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-9">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Admin Form</h5>

              <!-- Horizontal Form -->
              <form action="/matchs/updateData" method="post">
                <input name="uid" type="text" value="<%= data.id %>">
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Match </label>
                  <div class="col-sm-10">
                    <input type="match" name="match" id="matchTypes" class="form-control" value="<%= data.match %>">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Series </label>
                  <div class="col-sm-10">
                    <input type="text" name="series" id="matchTypes" class="form-control" value="<%= data.series %>">
                  </div>
                </div>
                
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Match Types</label>
                  <div class="col-sm-10">
                    <select name="matchTypes" id="matchTypes" class="form-control">
                      <option value="">-- Select Match Types --</option>
                      <% for(var d of mData){ %>
                            <option value="<%= d.id %>"><%= d.mtype %></option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Firts Teams</label>
                  <div class="col-sm-10">
                    <select name="f_teams" id="f_teams" class="form-control">
                      <option value="">-- Select Firts Teams --</option>
                      <% for(var d of teams){ %>
                        <option value="<%= d.id %>"><%= d.team %></option>
                    <% } %>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Second Teams</label>
                  <div class="col-sm-10">
                    <select name="l_teams" class="form-control">
                      <option value="">-- Select Second Teams --</option>
                      <% for(var d of teams){ %>
                        <option value="<%= d.id %>"><%= d.team %></option>
                    <% } %>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Match Date</label>
                  <div class="col-sm-10">
                    <input type="date" name="date" id="matchTypes" class="form-control" value="<%= data.date %>">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Match Time</label>
                  <div class="col-sm-10">
                    <input type="time" name="time" id="matchTypes" class="form-control" value="<%= data.time %>">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Win Toss</label>
                  <div class="col-sm-10">
                    <input type="text" name="toss" id="matchTypes" class="form-control" value="<%= data.toss %>">
                  </div>
                </div>

                

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Enter Umpires name</label>
                  <div class="col-sm-10">
                    <input type="text" name="umpires" id="matchTypes" class="form-control" value="<%= data.umpires %>">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Enter 3rd Umpires name</label>
                  <div class="col-sm-10">
                    <input type="text" name="THUmpires" id="matchTypes" class="form-control" value="<%= data.THUmpires %>">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Enter Referee name</label>
                  <div class="col-sm-10">
                    <input type="text" name="referee" id="matchTypes" class="form-control" value="<%= data.referee %>">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Select Stadium</label>
                  <div class="col-sm-10">
                    <select name="Stadium" id="matchTypes" class="form-control">
                      <option value="">-- Select Stadium --</option>
                      <% for(var d of match){ %>
                        <option value="<%= d.id %>"><%= d.name %></option>
                    <% } %>
                    </select>
                  </div>
                </div>

                

                

                <div class="text-center">
                    <input type="submit" class="btn btn-primary">
                    <input type="reset" class="btn btn-secondary">
                  </div>
                
              </form><!-- End Horizontal Form -->

            </div>
          </div>

        </div>
    </section>

  </main>End #main

  <%- include('footer') %>