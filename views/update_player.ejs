<%- include('header') %>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Admin Form Layout</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Forms</li>
                    <li class="breadcrumb-item active">Layouts</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-8">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Admin Form</h5>

                            <!-- Horizontal Form -->
                            <form action="/player/updateData" method="post" enctype="multipart/form-data">

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Select Country</label>
                                    <div class="col-sm-10">
                                        <select name="countryID" id="countryID" class="form-control">
                                            <option value="" selected disabled>-- Country For Player --</option>
                                            <% for(var d of teams){ %>
                                                    <option <% if(data.countryID==d.id){ %> selected <% } %> value="<%= d.id %>">
                                                        <%= d.team %>
                                                    </option>
                                                <% } %>
                                        </select>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">Player Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="inputEmail" name="name"
                                                value="<%= data.name %>">
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Player Age</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="age"
                                            value="<%= data.age %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Player Hobby</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="hobby"
                                            value="<%= data.hobby %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Born Date</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="date"
                                            value="<%= data.date %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Born Place</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="Place"
                                            value="<%= data.Place %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Total Scrore</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="scrore"
                                            value="<%= data.scrore %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Player Role</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="role"
                                            value="<%= data.role %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">player Format</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputEmail" name="format"
                                            value="<%= data.format %>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">player image</label>
                                    <div class="col-sm-10">
                                        <input type="file" class="form-control" id="inputEmail" name="img"
                                            value="<%= data.img %>">
                                    </div>
                                </div>

                                <div class="text-center">
                                    <input type="submit" class="btn btn-primary">
                                    <input type="reset" class="btn btn-secondary">
                                </div>

                            </form><!-- End Horizontal Form -->
                        </div>

                    </div>
                </div>
            </div>

            </div>
        </section>

    </main>End #main

    <%- include('footer') %>